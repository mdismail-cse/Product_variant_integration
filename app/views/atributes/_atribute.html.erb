<div id="<%= dom_id atribute %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Type:</strong>
    <%= atribute.title %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this atribute", atribute, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this atribute', edit_atribute_path(atribute), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
