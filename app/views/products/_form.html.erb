<%= form_with(model: @product, class: "contents") do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :details %>
    <%= form.text_area :details, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>




  <%#= form.fields_for :product_atributes do |product_atribute| %>
<!--    <div class="my-5">-->
      <%#= product_atribute.label :atribute_id %>
      <%#= product_atribute.select :atribute_id, Atribute.all.map{|atr| [atr.title, atr.id]},{},class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
<!--    </div>-->
  <%# end %>



  <%= form.fields_for :product_atributes do |product_atribute| %>
    <div class="my-5">
      <%= product_atribute.label :atribute_ids, "Select Attributes" %>
      <% Atribute.all.each do |atr| %>
        <div>
          <%= product_atribute.check_box :atribute_id, { multiple: true }, atr.id, nil %>
          <%= atr.title %>
        </div>
      <% end %>
    </div>
  <% end %>






  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
